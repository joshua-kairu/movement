<!-- The manifest -->

<manifest

    xmlns:android="http://schemas.android.com/apk/res/android"

    package="com.jlt.movement"

    >

    <application

        android:allowBackup="true"

        android:icon="@mipmap/ic_launcher"

        android:label="@string/app_name"

        android:supportsRtl="true"

        android:theme="@style/AppTheme"

        >

        <!-- the main activity -->

        <activity

            android:name=".MainActivity"

            android:label="@string/app_name"

            >

            <!-- be the launcher -->

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <!-- The Curve Motion Detail activity -->

        <activity

            android:name=".CurveMotionDetail"

            android:label="CurveMotionDetail"

            />

        <!-- The Curve Motion List activity -->

        <activity

            android:name=".CurveMotionList"

            android:label="CurveMotionList"

            />

        <!-- The Multiple Chaos activity -->

        <activity

            android:name=".MultipleChaoticElements"

            android:label="MultipleChaoticElements"

            />

        <!-- The Multiple Coherence activity -->

        <activity

            android:name=".MultipleCoherentElements"

            android:label="MultipleCoherentElements"

            />

        <!-- The Size Change activity -->

        <activity

            android:name=".SizeChange"

            android:label="SizeChange"

            />

    </application>

</manifest>
