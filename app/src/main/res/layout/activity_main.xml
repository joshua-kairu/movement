<!-- The main layout -->

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".MainActivity"

    >

    <!-- Holder LinearLayout -->

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:paddingTop="@dimen/space_between_content_areas"

        android:paddingBottom="@dimen/space_between_content_areas"

        android:layout_centerInParent="true"

        >

        <!-- Button for multiple coherent elements -->

        <Button

            android:id="@+id/am_b_multiple_coherence"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:minHeight="?actionBarSize"

            android:layout_marginStart="@dimen/layout_margin_start"

            android:layout_marginLeft="@dimen/layout_margin_start"

            android:layout_marginTop="@dimen/space_between_content_areas"

            android:layout_marginEnd="@dimen/layout_margin_end"

            android:layout_marginRight="@dimen/layout_margin_end"

            android:layout_marginBottom="@dimen/space_between_content_areas"

            android:text="Multiple Coherent Elements"

            android:onClick="multipleCoherenceClick"

            />

        <!-- Button for multiple incoherent elements -->

        <Button

            android:id="@+id/am_b_multiple_incoherence"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:minHeight="?actionBarSize"

            android:layout_marginStart="@dimen/layout_margin_start"

            android:layout_marginTop="@dimen/space_between_content_areas"

            android:layout_marginEnd="@dimen/layout_margin_end"

            android:layout_marginBottom="@dimen/space_between_content_areas"

            android:layout_marginLeft="@dimen/layout_margin_start"

            android:layout_marginRight="@dimen/layout_margin_end"

            android:text="Multiple Chaotic Elements"

            android:onClick="multipleChaoticClick"

            />

        <!-- Button for curved motion -->

        <Button

            android:id="@+id/am_b_curved_motion"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:minHeight="?actionBarSize"

            android:layout_marginStart="@dimen/layout_margin_start"

            android:layout_marginTop="@dimen/space_between_content_areas"

            android:layout_marginEnd="@dimen/layout_margin_end"

            android:layout_marginBottom="@dimen/space_between_content_areas"

            android:layout_marginLeft="@dimen/layout_margin_start"

            android:layout_marginRight="@dimen/layout_margin_end"

            android:text="Curved Motion"

            android:onClick="curvedMotionClick"

            />

        <!-- Button for doing size change -->

        <Button

            android:id="@+id/am_b_size_change"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:minHeight="?actionBarSize"

            android:layout_marginStart="@dimen/layout_margin_start"

            android:layout_marginTop="@dimen/space_between_content_areas"

            android:layout_marginEnd="@dimen/layout_margin_end"

            android:layout_marginBottom="@dimen/space_between_content_areas"

            android:layout_marginLeft="@dimen/layout_margin_start"

            android:layout_marginRight="@dimen/layout_margin_end"

            android:text="Size Change"

            android:onClick="sizeChangeClick"

            />

    </LinearLayout>

</RelativeLayout>