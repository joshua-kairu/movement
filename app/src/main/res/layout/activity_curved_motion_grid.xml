<!-- The curve motion layout -->

<!-- All held in the recycler -->

<!--

android:clipToPadding - whether the ViewGroup will clip its children and resize (but not clip) any EdgeEffect to its padding, if padding is not zero

android:scrollbars - which scrollbars should be displayed on scrolling

-->

<android.support.v7.widget.RecyclerView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/acmg_rv_list"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingTop="@dimen/space_between_content_areas"

    android:paddingBottom="@dimen/space_between_content_areas"

    android:clipToPadding="false"

    android:scrollbars="vertical"

    />